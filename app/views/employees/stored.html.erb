
<%if @user == current_user %>
 <% redirect_to "punch time", employee_path(@employee)%>
 <% else %>
  <%= link_to 'Add New Employee Account', new_employee_path, class: 'btn btn-info' %>
<% end %>

<% @user.employees.each do |employee| %>

<div class="well span8">
  <div>
    <h4>Employee: <%= link_to employee.last_name, employee_path(employee) %></h4>
    <p>
      <strong>Position:</strong> <%= employee.position %>
    </p>
    <p>Last Punch</p>
    <%= render 'current_punch', employee: employee %>
  </div>
  
  <div class="buttons">
    <%= render 'shared/punch_buttons', employee: employee %>
  </div>
  <p>
    <%= link_to "view all punches for #{employee.last_name}", employee_path(employee) %>
  </p>
  <h3>
    Total Time: <%=format_total_time(employee.total_time_on_job) %>
  </h3>
</div>  
<% end %>
<% end %>