<% type ||= 'in' %>
<% btn_label ||= 'Punch In' %>
<% btn_class ||= 'btn btn-success' %>
<% employee_page ||= false %>

<%= form_for [employee, @punch] do |f| %>
  <%= f.hidden_field :employee_page, value: 1 if employee_page %>
  <%= f.hidden_field :employee_id, value: employee.id %>
  <%= f.hidden_field :punch_type, value: type %>
  <%= f.submit btn_label , class: btn_class %>
<% end %>  

