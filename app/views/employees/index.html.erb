<% @user.employee do |employee| %>

<div class="well span8">
  <div>
    <h4>Employee: <%= link_to employee.name, employee_path(employee) %></h4>
    <p>
      <strong>Government Entity:</strong> <%= employee.government_entity %>
    </p>
    <p>Last Punch</p>
    <%= render 'current_punch', employee: employee %>
  </div>
  
  <div class="buttons">
    <%= render 'shared/punch_buttons', employee: employee %>
  </div>
  <p>
    <%= link_to "view all punches for #{employee.last_name}", employee_path(employee) %>
  </p>
  <h3>
    Total Time: <%= format_total_time(employee.total_time_on_job) %>
  </h3>
</div>  
<% end %>

